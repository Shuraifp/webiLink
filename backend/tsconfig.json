{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "commonjs",                             
    "outDir": "./dist",
    "rootDir": "./src",

    /* Type Checking */
    "strict": true,        
    "strictPropertyInitialization": true,                     
    "skipLibCheck": true,
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
